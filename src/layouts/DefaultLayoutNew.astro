---
import BaseHead from "@components/Global/BaseHead.astro";
import FooterNav from "@components/Nav/FooterNav.astro";

import RotatingScrollLogo from "@components/Global/RotatingScrollLogo.astro";
import SiteHeaderNew from "@components/Global/SiteHeaderNew.astro";
interface Props {
    accent?: string;
    title: string;
    head?: string;
    bodyClass?: string;
    hideTitle?: boolean;
}

const {
    title,
    head,
    accent = "var(--theme-accent-blue)",
    bodyClass = "",
    hideTitle,
}: Props = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead title={title} />

        {head}

        <style define:vars={{ accent }}>
            body {
                --theme-accent: var(--accent);
            }
        </style>
    </head>

    <body class={bodyClass}>
        <SiteHeaderNew />

        <main class="content layout">
            {
                !hideTitle && title !== "" && (
                    <div class="intro">
                        <h1 class="title">{title}</h1>
                    </div>
                )
            }

            <slot />
        </main>
        <FooterNav />

        <RotatingScrollLogo />
    </body>
</html>
