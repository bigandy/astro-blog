---
import HeaderNav from '@components/Nav/HeaderNav.astro'
import LanguageSelector from '@components/Nav/LanguageSelector.astro'

const homeUrl = Astro.currentLocale === 'en' ? "/" : "/fr";
---

<header class="layout">
  <div class="layout-inner">
    <h1>
      <a href={homeUrl}>
        Andrew Hudson
      </a>
    </h1>
    <HeaderNav />
    <LanguageSelector />
  </div>
</header>

<style>
  header {
    padding-block-start: 1rem;
    padding-block-end: 0.5rem;
    container-type: inline-size;
  }

  h1:has(a:hover) :global(.logo #flame) {
    display: block;
  }

  @container (min-width: 600px) {
    .layout-inner {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 1rem;
    }
  }

  header h1 {
    margin-block-end: 0;
    font-size: 1.5rem;

    a {
      vertical-align: -1px;
    }
  }

  header a {
    font-weight: bold;
  }

  .logo {
    transform: translateY(0.25rem);
  }

  svg {
    width: 2.5rem;
    height: 2.5rem;
  }

  h1 a {
    display: inline-flex;

    &:hover {
      text-decoration: none;
    }
  }
</style>
