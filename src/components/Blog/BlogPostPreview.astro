---
import { CollectionEntry } from "astro:content";
import ForwardArrow from "../ForwardArrow.astro";

interface Props {
  post: CollectionEntry<"blog">;
}
import dayjs from "dayjs";

const { post: { slug, data } } = Astro.props;
const { draft, title, date } = data;
---

<article class={`post-preview layout-inner ${draft && "draft"}`}>
  <header>
    <span class="publish-date">
      {dayjs(date).format("dddd, DD MMMM YYYY")}
    </span>
    <a href={`/blog/${slug}`}>
      <h2 class="title">{title}</h2>
    </a>
  </header>
  <main>
    <ForwardArrow url={`/blog/${slug}`} title={title} isBlog />
  </main>
</article>

<style>
  .content :global(main > * + *) {
    margin-top: 1rem;
  }

  .post-preview {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 4px double var(--theme-divider);
    max-width: max-content;
   
    &:hover {
      max-width: 100%;
    }
  }

  .draft {
    border-left: 2px solid var(--theme-accent);
    padding-left: 2rem;
    position: relative;
    transition: all 0.3s;

    &::before {
      transition: all 0.3s;
      text-transform: uppercase;
      position: absolute;
      font-size: 10px;
      left: -0.5rem;
      top: calc(50% - 1em);
      content: "draft"; rotate: -90deg; display: inline-block; 
    }

    &:hover {
      padding-left: 0;
      border-left: 0;
      max-width: 100%;

      &::before {
        opacity: 0;
      }
    }
  }

  header {
    display: flex;
    flex-direction: column;
    text-align: left;
    align-items: flex-start;
    justify-content: center;
    padding-bottom: 1rem;
  }

  .title,
  .publish-date {
    margin: 0;
  }

  .publish-date {
    font-size: 1.25rem;
    color: var(--theme-text-lighter);
    font-weight: var(--f-body-weight);
    font-family: var(--header-font-family);
    line-height: 1.3;
  }

  .title {
    font-size: 2.25rem;
    color: var(--theme-text);
  }
</style>
