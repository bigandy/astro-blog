---
const string = "andrew jd hudson :) • ";
const characters = string.split("");
---

<div class="super-wrapper">
    <div class="ring-wrapper">
        <div class="ring" aria-hidden="true">
            {[...characters, ...characters].map((char) => <span>{char}</span>)}
        </div>
        <span class="sr-only">{string}</span>
    </div>
</div>

<style>
    /* Need to import it here because Astro + postcss not working correctly. A known bug */
    @import "/src/css/partials/props.media.css";

    @property --degrees {
        syntax: "<angle>";
        initial-value: 0deg;
        inherits: true;
    }

    @property --percent {
        syntax: "<percentage>";
        initial-value: 0%;
        inherits: true;
    }

    @property --parent-ring-font-size {
        inherits: true;
        initial-value: 0.5;
        syntax: "<number>";
    }

    html {
        /* scroll-timeline: --page-scroll block; */
    }

    @supports (animation-timeline: scroll()) and (z-index: sibling-index()) {
        @container (min-width: 1300px) {
            @media (--motionOK) {
                .ring-wrapper {
                    rotate: var(--degrees);
                    aspect-ratio: 1;
                    display: grid;
                    place-items: center;
                    z-index: 10;
                    border-radius: 50%;
                    font-weight: bold;
                    display: none;
                }

                .ring {
                    font-family: monospace;
                    text-transform: uppercase;
                    font-size: var(--font-size--2);
                    position: relative;
                }

                span {
                    text-box: trim-both cap alphabetic;
                    --inner-angle: calc((360 / sibling-count()) * 1deg);
                    display: inline-block;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    color: black;
                    transform: translate(-50%, -50%)
                        rotate(calc(var(--inner-angle) * sibling-index()))
                        translateY(var(--radius));

                    &:nth-child(odd) {
                        color: var(--theme-accent);
                    }
                }

                .super-wrapper {
                    --radius: calc((1 / 0.2) * -2ch);
                    position: fixed;
                    top: 10rem;
                    right: 10rem;

                    &::after {
                        --reduction: calc(var(--font-size--2) * 1.3);
                        --pink: oklch(55% 0.45 350 / 0.85);
                        --yellow: oklch(95% 0.4 95 / 0.85);

                        clip-path: circle();
                        aspect-ratio: 1;
                        width: calc(
                            100% + calc(var(--radius) * -1) -
                                calc(var(--reduction) * 2)
                        );
                        height: calc(
                            100% + calc(var(--radius) * -1) -
                                calc(var(--reduction) * 2)
                        );
                        content: "";
                        display: block;
                        position: absolute;
                        inset: calc(
                            100% + calc(var(--radius) * 1.5) + var(--reduction)
                        );
                        background: linear-gradient(
                            to top in oklab,
                            var(--pink) var(--percent),
                            var(--yellow) var(--percent)
                        );
                        z-index: -1;
                        opacity: 0;
                        pointer-events: none;
                        transition:
                            opacity 300ms,
                            scale 300ms;
                    }
                }

                .ring {
                    --font-size: 0.5;
                    height: calc(
                        var(--radius) *
                            calc(var(--parent-ring-font-size) * -2.1)
                    );
                    border-radius: 50%;
                    aspect-ratio: 1;
                    display: grid;
                    place-content: center;

                    &::after {
                        rotate: calc(14deg * var(--degrees));
                        content: "☝️ Top";
                        font-size: 0.8em;
                        color: white;
                    }
                }

                .ring-wrapper {
                    display: none;
                    opacity: 0;
                    pointer-events: none;
                    transition:
                        opacity 300ms,
                        scale 300ms;

                    a {
                        scroll-behavior: smooth;
                    }

                    &:hover {
                        scale: 1.1;
                        cursor: pointer;
                        background-color: var(--theme-accent);

                        .ring::after {
                            transition: all 0.3s;
                            rotate: calc(360deg - var(--degrees));
                        }
                    }
                }

                .super-wrapper::after {
                    --header-height: 10px;

                    animation-range: entry 0px exit 100px, entry 0px exit 100%;

                    animation-name: --kf-fade-in, --kf-grow-progress;
                    animation-fill-mode: both;
                    animation-timeline:  scroll();
                }

                .ring-wrapper {
                    display: block;
                    animation-range: entry 0px exit 100px, entry 0px exit 100%;
                    animation-name: --kf-fade-in, --kf-rotation;
                    animation-fill-mode: both;
                    animation-timeline:  scroll();

                    .ring {
                        --font-size: var(--parent-ring-font-size);
                    }
                }
            }
        }
    }

    @keyframes --kf-fade-in {
        to {
            opacity: 1;
            --parent-ring-font-size: 0.5;
            pointer-events: auto;
        }
    }
    @keyframes --kf-grow-progress {
        from {
            --percent: 0%;
        }

        to {
            --percent: 100%;
        }
    }
    @keyframes --kf-rotation {
        to {
            --degrees: calc(360 * 13deg);
        }
    }
</style>

<script>
    const supports =
        CSS.supports("animation-timeline: scroll()") &&
        CSS.supports("order: sibling-index()");

    if (supports) {
        const rotator = document.querySelector(".ring-wrapper");

        rotator?.addEventListener("click", () =>
            window.scrollTo({ top: 0, behavior: "smooth" }),
        );
    }
</script>
