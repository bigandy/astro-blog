---
interface Props {
    skills: string[];
}
const { skills } = Astro.props;
---

<ul>
    {skills?.map((skill) => <li>{skill}</li>)}
</ul>

<style>
    ul {
        padding-left: 0;
    }

    li {
        display: inline-block;
        padding-right: 0.25rem;

        &:not(:last-child)::after {
            content: "/";
            padding-left: 0.25rem;
            color: var(--theme-accent);
        }
    }
</style>
