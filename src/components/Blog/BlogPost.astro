---

import BackArrow from "@components/Global/BackArrow.astro";
import BlogContent from "@components/Blog/BlogContent.astro"; 
import BlogPostHeader from "@components/Blog/BlogPostHeader.astro"
import { blogHomeUrl } from "@components/Nav/pages";

const { post } = Astro.props;
const { Content } = await post.render();

---

<article class="content post layout-inner">
  <BlogPostHeader date={post.data.date} title={post.data.title} isPreview={false} slug={post.slug} />

  <BlogContent>
    <Content />
  </BlogContent>

  <BackArrow
    url={blogHomeUrl}
    title={"Back to all blog posts"}
  />
</article>

<style>
  .content {
    margin-block-end: 8rem;
  }

  .content :global(main > * + *) {
    margin-block-start: 1rem;
  }
  
</style>
