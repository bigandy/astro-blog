---
interface Props {
    education: any[];
}
const { education } = Astro.props;
---

{
    education.map((education) => {
        return (
            <li>
                <h3 class="name">{education.institution}</h3>
                <p class="education-name">{education.name}</p>
                <div class="time">
                    <time
                        class="dt-start"
                        datetime={education.start.format("YYYY")}
                    >
                        {education.start.format("YYYY")}
                    </time>
                    <span>â€“</span>
                    <time
                        class="dt-end"
                        datetime={education.end.format("YYYY")}
                    >
                        {education.end.format("YYYY")}
                    </time>
                </div>
            </li>
        );
    })
}
