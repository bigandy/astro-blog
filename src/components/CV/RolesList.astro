---
import Role from "@components/CV/Role.astro";

import type { Roles } from "@pages/cv/content";

interface Props {
    roles: Roles;
    overrideFullDates?: boolean;
}
const { roles, overrideFullDates } = Astro.props;
---

<>
    {
        Object.entries(roles).map(([company, role]) => {
            return <Role company={company} role={role} overrideFullDates={overrideFullDates} />;
        })
    }
</>
