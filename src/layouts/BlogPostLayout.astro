---
import BaseHead from "@components/BaseHead.astro";
import BlogHeader from "@components/Blog/BlogHeader.astro";
import HeaderNav from "@components/Nav/HeaderNav.astro";
import FooterScripts from "@components/FooterScripts.astro";

import "src/css/global.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
  content: {
    title: string;
    description: string;
    permalink: string;
    lang?: string;
  };
}

const { content } = Astro.props;
const {
  title,
  description,
  permalink,
  lang = 'en'
} = content;
---

<html lang={lang}>
  <head>
    <BaseHead
      title={title}
      description={description}
      permalink={permalink}
    />
    <ViewTransitions />
  </head>

  <body>
    <div class="container">
      <BlogHeader />
      <HeaderNav />
      <slot />
    </div>
    <FooterScripts />
  </body>
</html>
