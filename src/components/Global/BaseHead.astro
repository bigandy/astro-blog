---
import SpeculationRules from "./SpeculationRules.astro";

interface Props {
    title: string;
    description?: string;
    permalink?: string;
}

const descriptionFallback = "Senior Software Engineer looking for answers.";
const permalinkFallback = "https://andrewhudson.dev/";

const {
    title,
    description = descriptionFallback,
    permalink = permalinkFallback,
} = Astro.props;

const permalinkUrl = new URL(permalink ?? "", Astro.url.origin).href;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/x-icon" href="/favicon.ico" />

<link
    href="/fonts/WorkSans-VariableFont_wght.woff2"
    rel="preload"
    type="font/woff2"
    as="font"
    crossorigin=""
/>

<link
    href="/fonts/Fraunces-Variable.woff2"
    rel="preload"
    type="font/woff2"
    as="font"
    crossorigin=""
/>

<!-- Primary Meta Tags -->
<title>Andrew JD Hudson - {title !== "" ? title : descriptionFallback}</title>
<meta name="title" content={title !== "" ? title : descriptionFallback} />
<meta name="description" content={description} />

<SpeculationRules />

<meta name="theme-color" content="#ffcc00" />
<link rel="manifest" href="/manifest.json" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={permalinkUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />

<!-- Mastodon -->
<meta property="fediverse:creator" content="@bigandy@indieweb.social" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={permalinkUrl} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
