{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "ESNext",
        "target": "es2024",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@layouts/*": ["src/layouts/*"],
            "@utils/*": ["src/utils/*"]
        }
    }
}
