---
import dayjs from "dayjs";
import Author from "./Author.astro";
import BackArrow from "./BackArrow.astro";

const { post } = Astro.props;
const { Content } = await post.render();
---

<div class="layout">
  <article class="content layout-inner">
    <div>
      <header>
        <p class="publish-date">
          {dayjs(date).format("dddd, DD MMMM YYYY")}
        </p>
        <h1 class="title">{post.data.title}</h1>
      </header>
      <Content />
      <Author
        name="@bigandy"
        href="https://twitter.com/bigandy"
      />
      <BackArrow
        url={"/blog/"}
        title={"Back to all blog posts"}
      />
    </div>
  </article>
</div>

<style>
  .content {
    margin-bottom: 8rem;
  }

  .content :global(main > * + *) {
    margin-top: 1rem;
  }

  .content :global(h2) {
    margin-top: 4rem;
  }

  header {
    padding-top: 2rem;
    padding-bottom: 1rem;
    margin-bottom: 1rem;
    border-bottom: 4px solid var(--theme-divider);
  }

  .author,
  .publish-date {
    margin: 0;
  }

  .publish-date,
  .author {
    color: var(--theme-text-lighter);
  }

  .title {
    font-size: 2.25rem;
    margin-block: 1rem;
  }
</style>
