---
// Component Imports
import BaseHead from "../components/Global/BaseHead.astro";
import BlogHeader from "../components/Global/SiteHeader.astro";
import FooterScripts from "../components/Global/FooterScripts.astro";
import BottomOfHead from "@components/Global/BottomOfHead.astro";

import "src/css/global.css";
import "src/css/cv.css";

interface Props {
  title: string;
}

const { title } = Astro.props;

const description = "Senior Software Engineer looking for answers.";
const permalink = "https://andrewhudson.dev/";
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <BottomOfHead />
  </head>

  <body class="cv">
    <BlogHeader />
    <main class="layout">
      <div class="content layout-inner">
        <h1 class="title">{title}</h1>
        <slot />
      </div>
    </main>
    <FooterScripts />
  </body>
</html>
