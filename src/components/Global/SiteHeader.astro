---
import Logo from "@components/Global/Logo.astro";

import HeaderNav from "@components/Nav/HeaderNav.astro";
---

<header class="layout">
  <div class="layout-inner">
    <h1>
      <a href="/">
        <Logo />
        <span>Andrew Hudson</span>
      </a>
    </h1>
    <HeaderNav />
  </div>
</header>

<style>
  header {
    padding-block-start: 1rem;
    padding-block-end: 0.5rem;
    container-type: inline-size;
  }

  h1:has(a:hover) :global(.logo #flame) {
    display: block;
  }

  @container (min-width: 600px) {
    .layout-inner {
      display: grid;
      grid-template-columns: auto 1fr;
      gap: 1rem;
    }
  }

  header h1 {
    margin-block-end: 0;
    font-size: 1.5rem;

    a {
      vertical-align: -10px;
    }
  }

  .logo {
    transform: translateY(0.25rem);
  }

  svg {
    width: 2.5rem;
    height: 2.5rem;
  }

  h1 a {
    display: inline-flex;

    &:hover {
      text-decoration: none;
    }
  }
</style>
