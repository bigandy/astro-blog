{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@components/*": [
				"src/components/*"
			],
			"@pages/*": [
				"src/pages/*"
			],
			"@layouts/*": [
				"src/layouts/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		}
	}
}