// Component Imports
import BlogPostPreview from './BlogPostPreview.astro';

// Data Fetching: List all Markdown posts in the repo.
let allPosts = [];
  const now = new Date();
  // Get all the posts from the posts directory
  allPosts = await Astro.glob('../pages/posts/**/*.md');
  allPosts = allPosts.filter((post) => {
    // console.log({post: post.frontmatter})
    // return post
    // Get rid of draft posts first
    if (post.frontmatter.draft && post.frontmatter.draft === true) {
      return false;
    }

    // get rid of future posts
    return new Date(post.frontmatter.date).getTime() <= now.getTime();
  })
  allPosts = allPosts.sort((a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf());

 // Take 10 latest posts for the moment until I learn how to do pagination with Astro!
  allPosts = allPosts.slice(0, 9);



interface Props {
    number: number;
}
const { number } = Astro.props
---

{allPosts.slice(0, number).map(p => <BlogPostPreview post={p} />)}
