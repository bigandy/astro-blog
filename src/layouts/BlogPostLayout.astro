---
import BaseHead from "@components/Global/BaseHead.astro";
import BlogHeader from "@components/Global/SiteHeader.astro";
import FooterScripts from "@components/Global/FooterScripts.astro";
import BottomOfHead from "@components/Global/BottomOfHead.astro";

import "src/css/global.css";

interface Props {
  content: {
    title: string;
    description: string;
    permalink: string;
    lang?: string;
  };
}

const { content } = Astro.props;
const { title, description, permalink, lang = "en" } = content;
---

<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />

    <BottomOfHead />
  </head>

  <body>
    <div class="container">
      <BlogHeader />
      <slot />
    </div>
    <FooterScripts />
  </body>
</html>
