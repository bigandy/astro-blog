---
import DefaultLayout from "@layouts/DefaultLayout.astro";

// CV Specific Components

import SkillsList from "@components/CV/SkillsList.astro";
import SocialLinksList from "@components/CV/SocialLinksList.astro";
import PorfolioList from "@components/CV/PorfolioList.astro";
import EducationList from "@components/CV/EducationList.astro";
import LanguagesList from "@components/CV/LanguagesList.astro";
import RolesList from "@components/CV/RolesList.astro";

import SettingsToggler from "@components/CV/SettingsToggler.svelte";

import "src/css/cv.css";

import {
    themeColorKey,
    summary,
    roles,
    skills,
    socialLinks,
    personalInformation,
    portfolioLinks,
    education,
    languages,
} from "./content";
---

<DefaultLayout
    title="CV"
    hideTitle
    bodyClass="cv force-print"
    accent="#008cff"
    showToggler={false}
>
    <script define:vars={{ themeColorKey }}>
        const localThemeColor = localStorage.getItem(themeColorKey);
        if (localThemeColor) {
            document.body.style.setProperty("--accent", localThemeColor);
        }
    </script>
    <header>
        <div class="contact h-card">
            <div>
                <h1 class="contact-name p-name">
                    <a href="/">{personalInformation.name}</a>
                </h1>
                <div class="meta">
                    <p class="contact-title">
                        <strong>{personalInformation.title}</strong>
                    </p>
                    <a href={`mailto:${personalInformation.email}`}
                        >{personalInformation.email}</a
                    >
                    <a href={personalInformation.website}
                        >{
                            personalInformation.website.replace("https://", "")
                        }</a
                    >
                    <a href={`tel:${personalInformation.phone}`} class="tel"
                        >{personalInformation.phone}</a
                    >
                    <p class="p-locality">{personalInformation.location}</p>
                </div>
            </div>

            <SettingsToggler
                client:visible
                class="contact-photo"
                src="/images/cv/andrew-profile.jpg"
                alt="Photo of Andrew JD Hudson"
                themeColorKey={themeColorKey}
            />
        </div>
    </header>

    <section class="main-column">
        <section>
            <h2 id="experience">Experience</h2>

            <ol class="entrylist list--dashed" reversed>
                <RolesList roles={roles} />
            </ol>
        </section>

        <section>
            <h2 id="relevant-experience">Selected Portfolio</h2>

            <PorfolioList links={portfolioLinks} />
        </section>
    </section>

    <aside>
        <section>
            <h2>Summary</h2>

            <p>
                <!-- I am an experienced senior front-end and javascript developer looking to create exciting and useful products and services in places that are powered by JavaScript, HTML and CSS. -->
                {summary}
            </p>
        </section>

        <section>
            <h2 id="key-achievements">Key Achievements</h2>

            <ul>
                <li><strong>Performance Boost</strong></li>
            </ul>
        </section>

        <section>
            <h2 id="skills">Skills</h2>

            <SkillsList skills={skills} />
        </section>

        <section>
            <h2 id="online-links">Online Links</h2>

            <ul class="cv-social list--plain list--dashed list--compact">
                <SocialLinksList links={socialLinks} />
            </ul>
        </section>
        <section>
            <h2 id="Languages">Languages</h2>

            <ul class="list--plain list--dashed list--compact">
                <LanguagesList languages={languages} />
            </ul>
        </section>
        <section>
            <h2 id="education">Education</h2>
            <ul class="list--dashed list--plain list--compact">
                <EducationList education={education} />
            </ul>
        </section>
    </aside>
</DefaultLayout>
