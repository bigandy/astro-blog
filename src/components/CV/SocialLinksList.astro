---
import type { SocialLink } from "@pages/cv/content";

interface Props {
    links: Array<SocialLink>;
}
const { links } = Astro.props;
---

{
    links.map((link) => (
        <li>
            <a href={link.href} data-url={link.shortLink}>
                <span>{link.name}</span>
                <span class="short-link">{link.shortLink}</span>
            </a>
        </li>
    ))
}

<style>
    .short-link {
        font-size: 90%;
        color: var(--lightgrey);
    }
</style>
