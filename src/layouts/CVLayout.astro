---
// Component Imports
import BaseHead from '../components/BaseHead.astro';
import GlobalNav from '../components/GlobalNav.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPostPreview from '../components/BlogPostPreview.astro';


interface MarkdownFrontmatter {
  date: number;
}

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.

const {title, head} = Astro.props;

let description = 'Senior Software Engineer looking for answers.';
let permalink = 'https://andrewhudson.dev/';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/

---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />

    <link rel="stylesheet" href={Astro.resolve('../css/global.css')} />
    <link rel="stylesheet" href={Astro.resolve('../css/cv.css')} />

    {head}

    <style lang="scss">
      body {
        width: 100%;
        /* display: grid; */
        /* grid-template-rows: 3.5rem 1fr; */
        --gutter: 0.5rem;
        --doc-padding: 2rem;
      }

      header {
        width: 100%;
        height: 100%;
        background-color: var(--theme-bg-offset);
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .content {
        margin-top: 4rem;
        margin-bottom: 8rem;
      }

      .content :global(main > * + *) {
        margin-top: 1rem;
      }

      .intro {
        margin-bottom: 2rem;
      }

      .intro > * {
        margin: 0;
      }

      .title {
        font-size: 2.5rem;
        font-weight: 700;

        &:hover :global(span) {
            &::after,
            &::before {
              transform: skew(0);
            }
          }

        :global(span) {
          position: relative;
          color: white;
          padding-inline: 0.1em;

          &::before,
          &::after {
            content: "";
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            transition: transform 100ms ease-in-out;
          }

          &::before {
            background: var(--color-purple);
            transform: skew(15deg);
          }

          &::after {
            background: var(--theme-accent);
            transform: skew(-15deg);
          }
        }
      }

    </style>
  </head>

  <body class="cv">
    <BlogHeader />
    <GlobalNav />
    <div class="layout">
      <article class="content layout-inner">
        <section class="intro">
          <h1 class="title">{title}</h1>
        </section>
        <section>
          <slot />
        </section>
      </article>
    </div>
  </body>
</html>
