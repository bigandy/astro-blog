---
import { getCollection, CollectionEntry } from "astro:content";

import BlogLayout from "@layouts/BlogLayout.astro";
import FullPageLayout from "@layouts/FullPageLayout.astro";
import BlogPost from "@components/Blog/BlogPost.astro";

export const prerender = true;

const collection = "weeknotes"

export async function getStaticPaths() {
	const collection = "weeknotes"
	const posts = await getCollection(collection);
  
	return posts.map((post) => {
		return {
		params: {
			slug: post.slug,
		},
		props: {
			post,
		},
		};
	});
}

interface Props {
  post: CollectionEntry<"weeknotes">;
}

const { post } = Astro.props;
const { template, title } = post.data;

const ogImage = `weeknotes/${post.slug}.png`;
---

{
	template === "full-page" ? (
		<FullPageLayout title={title} ogImage={ogImage}>
			<BlogPost post={post} showBackLink={false} showDate={false} collection=	{collection} />
		</FullPageLayout>
	) : (
		<BlogLayout title={title}  ogImage={ogImage}>
			<BlogPost post={post} collection={collection} />
		</BlogLayout>
	)
}
<style>
  .top-nav {
	margin-block-end: 2em;
  }
  body {
	--theme-accent: var(--theme-accent-blue);
  }
</style>
