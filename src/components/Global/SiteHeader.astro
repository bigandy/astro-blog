---
import SettingsToggler from "@components/CV/SettingsToggler.astro";
import HeaderNav from "@components/Nav/HeaderNav.astro";
import { themeColorKey } from "@pages/cv/content";
---

<header class="layout">
    <div class="layout-inner">
        <h1>
            <a href="/"> Andrew JD Hudson </a>
        </h1>
        <HeaderNav />
    </div>

    <SettingsToggler
        src="/images/cv/andrew-profile.jpg"
        alt="Photo of Andrew JD Hudson"
        themeColorKey={themeColorKey}
    />
</header>

<style>
    header {
        padding-block-start: 1rem;
        display: grid;
        grid-template-columns: 1fr auto;
    }

    header h1 {
        margin-block-end: 0.5rem;
        font-size: 1.5rem;

        a {
            vertical-align: -1px;
        }
    }

    header a {
        font-weight: bold;
    }

    h1 a {
        display: inline-flex;

        &:hover {
            text-decoration: none;
        }
    }
</style>
