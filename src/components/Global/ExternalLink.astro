---

import { Icon } from 'astro-icon/components';

interface Props {
	href: string;
    size?: string;
}

const { href, size = '1rem' } = Astro.props
---

<a href={href} target="_blank">
    <slot />
    <Icon name="external-arrow" size={size ??  ''} />
</a>

<style define:vars={{ size, }}>
    a {
        margin-right: calc(var(--size) + 0.5rem);
    }
    svg {
        position: absolute;
        
        /* text-decoration: none; */
        /* border-bottom: 1px solid; */
    }
</style>