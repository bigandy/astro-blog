---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import GlobalNav from '../components/GlobalNav.astro';
import BlogPost from '../components/BlogPost.astro';

const {content} = Astro.props;
const {title, description, date, author, heroImage, permalink, alt} = content;
---
<html lang={ content.lang || 'en' }>
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
    <link rel="stylesheet" href={Astro.resolve('../css/global.css')} />
  </head>

  <body>
    <div class="container">
      <BlogHeader />
      <GlobalNav />
      <BlogPost title={title} author={author} heroImage={heroImage} date={date} alt={alt}>
        <slot />
      </BlogPost>
      </div>
  </body>
</html>

<style>
body {
  --theme-accent: #95BF8F;
}
</style>

