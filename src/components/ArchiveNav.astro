---
const {page} = Astro.props;

---

<ul>
    <li>
      {page.url.prev && (
        <a href={page.url.prev}>&larr; Prev</a>
      )}
    </li>
  <li>
    {page.url.next && (
      <a href={page.url.next}>Next &rarr;</a>
    )}
  </li>
</ul>

<style lang="scss">
ul {
  padding-left: 0;
  list-style: none;
  display: grid;
  grid-template-columns: 1fr 1fr;
}

li {
  display: inline-block;

  &:last-child {
    justify-self: flex-end;
  }
}
</style>

