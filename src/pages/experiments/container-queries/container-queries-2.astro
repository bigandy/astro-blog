---
// Component Imports
import FullScreenLayout from "../../../layouts/FullScreenLayout.astro";
import CalendarBlock from "../components/CalendarBlock.astro";
import ContainerQuerySupport from "../components/ContainerQuerySupport.astro";
import "src/css/container-queries-2.css";

const title =
  "Continer Queries 2 - A more detailed example";
---

<FullScreenLayout title={title}>
  <ContainerQuerySupport />

  <div class="container">
    <main>
      <section>
        <CalendarBlock />
      </section>
      <aside>
        <CalendarBlock />
      </aside>
    </main>

    <footer>
      <CalendarBlock />
    </footer>
  </div>
</FullScreenLayout>

<style>
  main {
    gap: 1em;
    display: grid;
    grid-template-columns: 3fr 1fr;
  }

  section,
  footer,
  aside {
    border: 1px solid black;
    padding: 1em;
  }

  aside {
    display: grid;
    grid-template-rows: 3fr 1fr;
  }

  section {
    display: grid;
    grid-template-columns: 3fr 2fr 1fr;
  }

  footer {
    margin-top: 1em;
  }
</style>
