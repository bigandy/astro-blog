---
import type { SocialLink } from "@pages/cv/content";

interface Props {
    links: Array<SocialLink>;
}
const { links } = Astro.props;
---

<>
    {
        links.map((link) => (
            <li>
                <a href={link.href}>{link.name}</a>
                <span>{link.shortLink}</span>
            </li>
        ))
    }
</>

<style>
    span {
        display: block;
        font-size: 90%;
        color: var(--lightgrey);
    }
</style>
