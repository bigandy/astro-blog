---
import SettingsToggler from "@components/CV/SettingsToggler.astro";
import HeaderNav from "@components/Nav/HeaderNav.astro";
---

<header>
    <div>
        <h1 class="contact-name p-name">
            <a href="/">Andrew JD Hudson</a>
        </h1>
        <HeaderNav />
    </div>

    <SettingsToggler
        src="/images/cv/andrew-profile.jpg"
        alt="Photo of Andrew JD Hudson"
    />
</header>

<style>
    header {
        display: grid;
        grid-template-columns: 1fr auto;
        line-height: 1; // This is the line-height of the text inside the header
    }

    h1 {
        line-height: 1;
        margin-top: 0;
    }
</style>
