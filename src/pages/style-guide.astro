---
import DefaultLayout from "@layouts/DefaultLayout.astro";
import RotatingScrollLogo from "@components/Global/RotatingScrollLogo.astro";
const greys = [0, 50, 100, 200, 300, 400, 500, 600, 700, 800, 900, 1000];
---

<DefaultLayout title="Style Guide">
    <div class="blocks">
        <section>
            <h2>Colors</h2>
            <h3>Greys</h3>
            <ul>
                {greys.map(color => {
                    return (
                        <li
                            style=`--color: var(--color-gray-${color})`
                            data-color=`--color-gray-${color}`
                        >
                            <span>--color-grey-{color}</span>
                        </li>
                    )
                })}
            </ul>

            <h3>Accent Color</h3>

            <ul>
                <li style=`--color: var(--theme-accent`><span>--theme-accent</span></li>
            </ul>
        </section>

        <section>
            <h2>Font-sizes</h2>

            <h1>Heading Level 1</h1>
            <h2>Heading Level 2</h2>
            <h3>Heading Level 3</h3>
            <h4>Heading Level 4</h4>
            <h5>Heading Level 5</h5>
            <h6>Heading Level 6</h6>

        </section>

        <section>
            <h2>Components</h2>
            <h3>Rotating Scroll Logo</h3>


            <div style="margin: 6rem 3rem;">
                <RotatingScrollLogo noScroll="true" />
            </div>
        </section>
    </div>

    <style>
        @scope (.blocks) {
            ul {
                display: flex;
                margin: 0;
                padding: 0;
                gap: 1rem;
                list-style: "";
                margin-bottom: 10rem;
            }

            li {
                height: 30px;
                aspect-ratio: 1;
                border: 1px solid;
                background: var(--color);
                anchor-name: --parent;
                anchor-scope: --parent;
            }

            span {
                position-anchor: --parent;
                position: absolute;
                top: calc(anchor(bottom) + .5rem);
                left: calc(anchor(left) + 0.25rem);
                display: block;
                writing-mode: vertical-rl;
                height: max-content;
            }
        }
    </style>
</DefaultLayout>
