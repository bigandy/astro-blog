---
import FullScreenLayout from "@layouts/FullScreenLayout.astro";

const title = "Carousel - Add the Buttons for Navigating";

const images = new Array(21).fill(null);
const dimensions = { height: 500, width: 1000 };
const imagesOut = images.map((_, index) => {
	return `https://picsum.photos/seed/ah${index}/${dimensions.width}/${dimensions.height}?random=${index}`;
});
---

<FullScreenLayout title={""} removePadding={true}>
    <div class="intro">
        <h1>{title}</h1>
        <p>
            This builds on the previous demo in that now there are added buttons
            for navigating left and right.
        </p>
    </div>
    <div class="container">
        <ul class="carousel">
            {
                imagesOut.map((src) => (
                    <li>
                        <img
                            src={src}
                            alt=""
                            loading="lazy"
                            width={dimensions.width}
                            height={dimensions.height}
                        />
                    </li>
                ))
            }
        </ul>
    </div>
</FullScreenLayout>

<style>
    @font-face {
        font-family: Material Symbols Outlined;
        font-style: normal;
        font-weight: 100 700;
        src: url(https://fonts.gstatic.com/s/materialsymbolsoutlined/v207/kJEhBvYX7BgnkSrUwT8OhrdQw4oELdPIeeII9v6oFsLjBuVY.woff2)
            format("woff2");
    }

    .container {
        /* background-color: black; */
    }

    .intro {
        padding: 3rem;

        h1 {
            font-size: var(--font-size-1);
        }

        p {
            max-width: 100%;
        }
    }

    ul {
        overflow-y: auto;
        overscroll-behavior-x: contain;
        scroll-snap-type: x mandatory;
        scroll-behavior: smooth;
        scrollbar-width: none;

        anchor-name: --carousel;
        overflow-x: auto;

        list-style-type: none;
        counter-reset: item;
        padding: 1rem;
        scroll-padding: 1rem;
        /* container-type: inline-size scroll-state; */

        inline-size: min(1024px, 100vw);
        margin-inline: auto;
        display: grid;
        gap: 100px;
        grid-auto-flow: column;
        grid-auto-columns: max-content;
        gap: 1rem;
        background-color: #fff;

        img {
            max-width: 100%;
        }

        li {
            /* 
            * Snap the item to relative to the parent scrollport
            *  */
            scroll-snap-align: center;
            /* container-type: scroll-state; */
            /* display: inline-grid; */
            counter-increment: item;

            &::after {
                content: counter(item);
            }
        }

        /* Buttons! */
        &::scroll-button(*) {
            position: fixed;
            position-anchor: --carousel;
            font-family: "Material Symbols Outlined";
            border-radius: 50%;
            aspect-ratio: 1;
            border: none;
            padding: 1rem;
            z-index: 2;

            &::disabled {
                cursor: not-allowed;
                opacity: 0.25;
            }
        }

        &::scroll-button(right) {
            /* position-area: inline-end center; */
            right: 0;
            top: 50%;
            content: "arrow_forward" / "Next";
            margin-left: 1rem;

            &:hover {
                background: black;
                color: white;
            }
        }

        &::scroll-button(left) {
            /* position-area: inline-start; */
            /* position-try-fallback: inline-end; */
            /* top: anchor(center);
            left: anchor(left); */
            left: 0;
            top: 50%;
            content: "arrow_back" / "Previous";
            margin-right: 1rem;
        }
        /* End: Buttons! */

        @container (width > 1024px) {
            &::scroll-button(left) {
                position-area: inline-start center;
            }

            &::scroll-button(right) {
                position-area: inline-end center;
            }
        }
    }
</style>
